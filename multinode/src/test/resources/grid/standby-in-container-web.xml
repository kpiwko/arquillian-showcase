<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
   xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="
      http://java.sun.com/xml/ns/javaee
      http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

   <env-entry>
      <env-entry-name>name</env-entry-name>
      <env-entry-type>java.lang.String</env-entry-type>
      <env-entry-value>standby-infinispan.xml</env-entry-value>
   </env-entry>
   <env-entry>
      <env-entry-name>infinispan.server.host</env-entry-name>
      <env-entry-type>java.lang.String</env-entry-type>
      <env-entry-value>127.0.0.1</env-entry-value>
   </env-entry>
   <env-entry>
      <env-entry-name>infinispan.server.port</env-entry-name>
      <env-entry-type>java.lang.String</env-entry-type>
      <env-entry-value>11311</env-entry-value>
   </env-entry>

   <servlet>
      <servlet-name>StarterServlet</servlet-name>
      <servlet-class>com.acme.multinode.grid.standby.StandbyTestServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
   </servlet>

   <servlet-mapping>
      <servlet-name>StarterServlet</servlet-name>
      <url-pattern>/Start</url-pattern>
   </servlet-mapping>

</web-app>
